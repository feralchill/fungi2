---
import MessageBar from '../components/MessageBar.astro';
import Navigation from '../components/Navigation.astro';
import Banner from '../components/Banner.astro';
import BottomTab from '../components/BottomTab.astro';

interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = '/' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="The Fungi Consultant - Functional mushroom consultation and coaching" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="https://raw.githubusercontent.com/feralchill/fungi/main/IMG_5966.png" />

    <!-- Open Graph / Social Media Preview -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Coaching, workshops and consultation for individuals and organisations ready to discover the power of functional mushrooms." />
    <meta property="og:image" content="https://raw.githubusercontent.com/feralchill/fungi/main/IMG_5963.png" />
    <meta property="og:url" content="https://thefungiconsultant.com" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Coaching, workshops and consultation for individuals and organisations ready to discover the power of functional mushrooms." />
    <meta name="twitter:image" content="https://raw.githubusercontent.com/feralchill/fungi/main/IMG_5963.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Literata:wght@400;500;600&family=Abril+Fatface&family=Almendra+Display&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <MessageBar />
    <Navigation currentPage={currentPage} />
    <Banner />
    <main>
      <slot />
    </main>
    <BottomTab />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    -webkit-tap-highlight-color: transparent;
  }

  html {
    font-family: 'Literata', serif;
    background: #EFEFED;
    overflow-x: hidden;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  }

  body {
    min-height: 100vh;
    padding-top: 90px;
    overflow-x: hidden;
    max-width: 100%;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  }

  button, a {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0) !important;
    -webkit-tap-highlight-color: transparent !important;
  }

  main {
    max-width: 100%;
    overflow-x: hidden;
    padding: 0 20px 100px;
  }

  @media (max-width: 768px) {
    body {
      padding-top: 0;
    }

    main {
      padding: 0 15px 100px;
    }
  }
</style>
