---
import Layout from '../layouts/Layout.astro';
---

<Layout title="The Fungi Consultant - The Fungi Consultant Podcast" currentPage="/tfc-podcast">
  <div class="podcast-page-content">
    <h1 class="page-heading">The Fungi Consultant Podcast</h1>

    <div class="intro-text">
      Dive deep into conversations about functional mushrooms, wellness, and the fascinating world of fungi.
    </div>

    <div class="podcast-embed-container">
      <iframe style="border-radius:12px" src="https://open.spotify.com/embed/show/0bGc7S9DjRAIgSb5KfCh0B?utm_source=generator" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
    </div>

    <!-- Bottom Image -->
    <img src="https://raw.githubusercontent.com/feralchill/fungi/main/IMG_6018.png" class="bottom-image" alt="">

    <!-- Finish Section -->
    <div class="finish-container">
      <div class="finish-text">
        <span class="brand-name">The Fungi Consultant</span> est. 2024
      </div>
      <div class="footer-text-small">
        <a href="https://anthosponda.art" target="_blank" class="finish-link">site summoned by Ã¦lfryth</a>
      </div>
    </div>
  </div>
</Layout>

<style>
@import url('https://fonts.googleapis.com/css2?family=Literata:wght@400;500&family=Abril+Fatface&display=swap');

.podcast-page-content {
  max-width: 900px;
  margin: 0 auto;
  padding: 0 20px;
}

.page-heading {
  font-family: 'Abril Fatface', serif;
  font-size: 2.5em;
  color: #b6c2a0;
  text-align: center;
  margin-top: 40px;
  margin-bottom: 30px;
}

.intro-text {
  font-family: 'Literata', serif;
  font-weight: 400;
  font-size: 0.95em;
  line-height: 1.6;
  color: #52515c;
  text-align: center;
  margin-bottom: 50px;
}

.podcast-embed-container {
  background-color: #f9f9f7;
  border: 2px solid #e0e0d8;
  border-radius: 12px;
  padding: 40px;
  margin-bottom: 60px;
}

.podcast-embed-container iframe {
  display: block;
  margin: 0 auto;
}

.bottom-image {
  width: 100%;
  max-width: 400px;
  height: auto;
  margin: 60px auto 0 auto;
  display: block;
}

.finish-container {
  max-width: 800px;
  margin: 0px auto;
  margin-bottom: 0px auto;
  padding: 10px;
  text-align: center;
}

.finish-text {
  font-family: 'Literata', serif;
  font-weight: 500;
  font-size: 0.8em;
  line-height: 1.5;
  color: #52515c;
  margin-bottom: 10px;
}

.finish-text .brand-name {
  font-family: 'Abril Fatface', serif;
}

.finish-link {
  color: #b6c2a0;
  font-family: 'Almendra Display', serif;
  font-size: 1em;
  font-weight: bold;
  opacity: 1;
  transition: all 0.3s ease;
}

.finish-link:hover {
  color: #4e625c;
  font-weight: bold;
  opacity: 1;
  text-decoration: underline;
}

.finish-link:active {
  color: #9a89a4;
  font-weight: bold;
  opacity: 1;
  text-decoration: none;
}

.finish-link:visited {
  color: #b6c2a0;
  font-weight: bold;
  opacity: 1;
}

.footer-text-small {
  font-family: 'Almendra Display', serif;
  font-size: 0.7em;
  color: #b6c2a0;
  margin-bottom: 60px;
}

.brand-name {
  font-family: 'Abril Fatface', serif;
  font-style: normal;
}

@media (max-width: 768px) {
  .podcast-page-content {
    padding: 0 15px;
  }

  .page-heading {
    font-size: 2em;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .intro-text {
    font-size: 0.9em;
    line-height: 1.7;
    margin-bottom: 35px;
  }

  .podcast-embed-container {
    padding: 25px;
  }

  .bottom-image {
    max-width: 200px;
    margin-top: 40px;
  }
}
</style>
