<script is:inline>
function mushroomToggle(num) {
  // Get elements based on which mushroom was clicked
  let btn, panel, arrow;

  if (num === 1) {
    btn = document.getElementById('lionMobileBtn');
    panel = document.getElementById('lionMobilePanel');
    arrow = document.getElementById('lionMobileArrow');
  } else if (num === 2) {
    btn = document.getElementById('reishiMobileBtn');
    panel = document.getElementById('reishiMobilePanel');
    arrow = document.getElementById('reishiMobileArrow');
  } else if (num === 3) {
    btn = document.getElementById('cordycepsMobileBtn');
    panel = document.getElementById('cordycepsMobilePanel');
    arrow = document.getElementById('cordycepsMobileArrow');
  }

  // Toggle the open class on panel and arrow
  if (panel && arrow) {
    panel.classList.toggle('open');
    arrow.classList.toggle('open');
  }
}
</script>
