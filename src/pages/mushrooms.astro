<script is:inline>
function mushroomToggle(num) {
  // Get elements based on which mushroom was clicked
  let btn, panel, arrow;

  if (num === 1) {
    btn = document.getElementById('lionMobileBtn');
    panel = document.getElementById('lionMobilePanel');
    arrow = document.getElementById('lionMobileArrow');
  } else if (num === 2) {
    btn = document.getElementById('reishiMobileBtn');
    panel = document.getElementById('reishiMobilePanel');
    arrow = document.getElementById('reishiMobileArrow');
  } else if (num === 3) {
    btn = document.getElementById('cordycepsMobileBtn');
    panel = document.getElementById('cordycepsMobilePanel');
    arrow = document.getElementById('cordycepsMobileArrow');
  } else if (num === 4) {
    btn = document.getElementById('turkeyTailMobileBtn');
    panel = document.getElementById('turkeyTailMobilePanel');
    arrow = document.getElementById('turkeyTailMobileArrow');
  }

  // Toggle the open class on panel and arrow
  if (panel && arrow) {
    panel.classList.toggle('open');
    arrow.classList.toggle('open');
  }
}

// Desktop full-width expansion
document.addEventListener('DOMContentLoaded', function() {
  const isDesktop = () => window.innerWidth > 1024;
  const mushroomsContainer = document.querySelector('.mushrooms-container');
  const expandedFullWidth = document.getElementById('expandedFullWidth');
  const expandedFullContent = document.getElementById('expandedFullContent');
  const showLessBtn = document.getElementById('showLessBtn');

  const toggles = {
    lion: document.getElementById('lionToggle'),
    reishi: document.getElementById('reishiToggle'),
    cordyceps: document.getElementById('cordycepsToggle'),
    turkeyTail: document.getElementById('turkeyTailToggle')
  };

  const sections = {
    lion: document.getElementById('lions-mane'),
    reishi: document.getElementById('reishi'),
    cordyceps: document.getElementById('cordyceps'),
    turkeyTail: document.getElementById('turkey-tail')
  };

  let currentExpanded = null;

  function expandMushroom(name) {
    if (!isDesktop()) return;

    const toggle = toggles[name];
    const section = sections[name];
    const expandedDiv = section.querySelector('.mushroom-expanded');

    // Copy expanded content to full-width area
    expandedFullContent.innerHTML = expandedDiv.innerHTML;

    // Remove the show-less-link from the copied content
    const copiedShowLess = expandedFullContent.querySelector('.show-less-link');
    if (copiedShowLess) copiedShowLess.remove();

    // Show full-width area
    expandedFullWidth.classList.add('active');
    mushroomsContainer.classList.add('has-expanded');

    // Mark active section
    Object.values(sections).forEach(s => s.classList.remove('active-expanded'));
    section.classList.add('active-expanded');

    currentExpanded = name;
  }

  function collapseMushroom() {
    if (!currentExpanded) return;

    // Uncheck the toggle
    if (toggles[currentExpanded]) {
      toggles[currentExpanded].checked = false;
    }

    // Hide full-width area
    expandedFullWidth.classList.remove('active');
    mushroomsContainer.classList.remove('has-expanded');

    // Remove active section marker
    Object.values(sections).forEach(s => s.classList.remove('active-expanded'));

    currentExpanded = null;
  }

  // Listen for toggle changes
  Object.entries(toggles).forEach(([name, toggle]) => {
    if (toggle) {
      toggle.addEventListener('change', function() {
        if (isDesktop()) {
          if (this.checked) {
            // Collapse any other expanded mushroom first
            if (currentExpanded && currentExpanded !== name) {
              toggles[currentExpanded].checked = false;
            }
            expandMushroom(name);
          } else {
            collapseMushroom();
          }
        }
      });
    }
  });

  // Show less button
  if (showLessBtn) {
    showLessBtn.addEventListener('click', collapseMushroom);
  }

  // Make headings and images clickable to switch/expand
  Object.entries(sections).forEach(([name, section]) => {
    const heading = section.querySelector('.mushroom-heading');
    const image = section.querySelector('.mushroom-image');

    [heading, image].forEach(el => {
      if (el) {
        el.style.cursor = 'pointer';
        el.addEventListener('click', () => {
          if (isDesktop()) {
            // If clicking on a different mushroom while one is expanded, switch to it
            if (currentExpanded && currentExpanded !== name) {
              toggles[currentExpanded].checked = false;
              toggles[name].checked = true;
              expandMushroom(name);
            } else if (currentExpanded === name) {
              // Clicking the same one collapses it
              collapseMushroom();
            } else {
              // Nothing expanded, expand this one
              toggles[name].checked = true;
              expandMushroom(name);
            }
          }
        });
      }
    });
  });

  // Handle resize
  window.addEventListener('resize', function() {
    if (!isDesktop() && currentExpanded) {
      expandedFullWidth.classList.remove('active');
      mushroomsContainer.classList.remove('has-expanded');
      Object.values(sections).forEach(s => s.classList.remove('active-expanded'));
    }
  });
});
