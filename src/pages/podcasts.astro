<script is:inline>
  function switchTab(tabNumber) {
    // Remove active class from all tabs and panels
    document.querySelectorAll('.pill-tab').forEach(tab => tab.classList.remove('active'));
    document.querySelectorAll('.tab-panel').forEach(panel => panel.classList.remove('active'));

    // Add active class to selected tab and panel
    document.querySelectorAll('.pill-tab')[tabNumber - 1].classList.add('active');
    document.getElementById(`panel-${tabNumber}`).classList.add('active');
  }

  // Episode switcher for TFC podcast (panel 1)
  document.addEventListener('DOMContentLoaded', function() {
    const tfcItems = document.querySelectorAll('#panel-1 .title-item');
    const tfcPlayer = document.getElementById('tfc-player');
    const tfcTitle = document.getElementById('tfc-title');
    const tfcLink = document.getElementById('tfc-link');

    tfcItems.forEach(item => {
      item.addEventListener('click', () => {
        const episodeId = item.getAttribute('data-episode-id');
        const title = item.getAttribute('data-title');

        // Remove active class from all TFC items
        tfcItems.forEach(t => t.classList.remove('active'));
        item.classList.add('active');

        // Update TFC player iframe, title, and link
        tfcPlayer.innerHTML = `<iframe style="border-radius:12px" src="https://open.spotify.com/embed/episode/${episodeId}?utm_source=generator" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>`;
        tfcTitle.textContent = title;
        tfcLink.href = `https://open.spotify.com/episode/${episodeId}`;
      });
    });

    // Episode switcher for OGBC podcast (panel 2)
    const ogbcItems = document.querySelectorAll('#panel-2 .title-item');
    const ogbcPlayer = document.getElementById('ogbc-player');
    const ogbcTitle = document.getElementById('ogbc-title');
    const ogbcLink = document.getElementById('ogbc-link');

    ogbcItems.forEach(item => {
      item.addEventListener('click', () => {
        const episodeId = item.getAttribute('data-episode-id');
        const isYoutube = item.getAttribute('data-youtube');
        const title = item.getAttribute('data-title');

        // Remove active class from all OGBC items
        ogbcItems.forEach(t => t.classList.remove('active'));
        item.classList.add('active');

        // Update OGBC player iframe, title, and link
        if (isYoutube) {
          ogbcPlayer.innerHTML = `<iframe width="100%" height="352" style="border-radius:12px" src="https://www.youtube.com/embed/${episodeId}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`;
          ogbcLink.href = `https://www.youtube.com/watch?v=${episodeId}`;
          ogbcLink.textContent = 'Watch on YouTube →';
        } else {
          ogbcPlayer.innerHTML = `<iframe style="border-radius:12px" src="https://open.spotify.com/embed/episode/${episodeId}?utm_source=generator" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>`;
          ogbcLink.href = `https://open.spotify.com/episode/${episodeId}`;
          ogbcLink.textContent = 'Listen on Spotify →';
        }
        ogbcTitle.textContent = title;
      });
    });

    // Podcast player switcher for panel 3 (appearances)
    const titleItems = document.querySelectorAll('#panel-3 .title-item');
    const players = document.querySelectorAll('.player-content');

    titleItems.forEach(titleItem => {
      titleItem.addEventListener('click', () => {
        const podcastId = titleItem.getAttribute('data-podcast');

        // Remove active class from all title items and players
        titleItems.forEach(t => t.classList.remove('active'));
        players.forEach(p => p.classList.remove('active'));

        // Add active class to clicked title item and corresponding player
        titleItem.classList.add('active');
        document.getElementById(`podcast-${podcastId}`).classList.add('active');
      });
    });
  });
</script>
