---
const { currentPage } = Astro.props;

// Define all pages
const pages = [
  { href: '/about', label: 'About' },
  { href: '/mushrooms', label: 'Functional Mushrooms' },
  { href: '/media', label: 'Media' },
  { href: '/events', label: 'Events' },
  { href: '/testimonials', label: 'Testimonials' },
  { href: '/booking', label: 'Book a Consultation' }
];

// Build navigation array
let navItems;
if (currentPage === '/') {
  // Homepage - show all pages as normal
  navItems = pages;
} else {
  // Other pages - filter out current page and add "Home" at front
  navItems = pages.filter(p => p.href !== currentPage);
  navItems.unshift({ href: '/', label: 'Home' });
}
---

<nav class="main-nav">
  <button class="hamburger-container" id="hamburger">
    <div class="hamburger-lines">
      <span></span>
      <span></span>
      <span></span>
    </div>
    <span class="hamburger-text">menu</span>
  </button>
  <div class="nav-bar" id="navBar">
    {navItems.map(item => (
      <a href={item.href} class="nav-link">{item.label}</a>
    ))}
  </div>
</nav>

<style>
@import url('https://fonts.googleapis.com/css2?family=Literata:wght@400;600&family=Abril+Fatface&display=swap');

/* Navigation container */
.main-nav {
  position: fixed;
  top: 35px;
  left: 0;
  right: 0;
  width: 100%;
  background: #4e625c;
  z-index: 99;
  box-shadow: 0 4px 12px rgba(44, 41, 48, 0.4);
}

/* Desktop navigation bar */
.nav-bar {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 22px 40px;
  gap: 30px;
  width: 100%;
}

.nav-bar .nav-link {
  font-family: 'Abril Fatface', serif;
  font-size: 1.4em;
  color: #efefed;
  text-decoration: none;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.nav-bar .nav-link:hover {
  text-decoration: underline;
  transform: scale(1.05);
}

.nav-bar .nav-link.active {
  color: #9A89A4 !important;
}

.nav-bar .nav-link:focus,
.nav-bar .nav-link:active {
  color: #9A89A4;
}

/* Hamburger menu button - hidden on desktop */
.hamburger-container {
  display: none;
  flex-direction: column;
  align-items: center;
  gap: 5px;
  padding: 15px;
  cursor: pointer;
  background: none;
  border: none;
  position: fixed;
  top: 0;
  right: 15px;
  z-index: 1001;
}

.hamburger-lines {
  display: flex;
  flex-direction: column;
  gap: 6px;
  width: 28px;
  height: 20px;
  position: relative;
}

.hamburger-lines span {
  width: 28px;
  height: 3px;
  background: #4e625c;
  transition: all 0.3s ease;
  display: block;
  position: absolute;
  left: 0;
  border-radius: 2px;
}

.hamburger-lines span:nth-child(1) {
  top: 0;
}

.hamburger-lines span:nth-child(2) {
  top: 50%;
  transform: translateY(-50%);
}

.hamburger-lines span:nth-child(3) {
  bottom: 0;
}

.hamburger-text {
  font-family: 'Abril fatface', serif;
  font-size: 17px;
  color: #4e625c;
  transition: all 0.3s ease;
}

/* Change hamburger color when open */
.hamburger-container.open .hamburger-lines span {
  background: #efefed;
}

.hamburger-container.open .hamburger-text {
  color: #efefed;
  opacity: 0;
}

/* Transform hamburger to X when open */
.hamburger-container.open .hamburger-lines span:nth-child(1) {
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
  box-shadow: none;
}

.hamburger-container.open .hamburger-lines span:nth-child(2) {
  opacity: 0;
}

.hamburger-container.open .hamburger-lines span:nth-child(3) {
  bottom: auto;
  top: 50%;
  transform: translateY(-50%) rotate(-45deg);
  box-shadow: none;
}

@media (max-width: 768px) {
  .main-nav {
    background: transparent;
    position: relative;
    top: 0;
    box-shadow: none;
  }

  .hamburger-container {
    display: flex;
    position: fixed;
    top: 40px;
    height: auto;
    padding: 8px 15px;
    z-index: 1001;
  }

  .hamburger-lines {
    width: 22px;
    height: 16px;
  }

  .hamburger-lines span {
    width: 22px;
    height: 2.5px;
  }

  .hamburger-text {
    font-size: 13px;
  }

  .nav-bar {
    display: none;
    flex-direction: column;
    padding: 8px 20px 12px;
    gap: 12px;
    background: #4e625c;
    width: 100%;
    position: fixed;
    top: 35px;
    left: 0;
    right: 0;
    z-index: 1000;
    box-shadow: none;
  }

  .nav-bar.open {
    display: flex;
  }

  .nav-bar .nav-link {
    font-size: 1.05em;
    text-align: center;
    color: #efefed;
  }

  .nav-bar .nav-link.active {
    color: #9a89a4 !important;
  }
}
</style>

<script>
function initMenu() {
  const hamburger = document.getElementById('hamburger');
  const navBar = document.getElementById('navBar');

  if (!hamburger || !navBar) {
    setTimeout(initMenu, 100);
    return;
  }

  hamburger.addEventListener('click', function() {
    hamburger.classList.toggle('open');
    navBar.classList.toggle('open');
  });

  const navLinks = document.querySelectorAll('.nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', function() {
      navLinks.forEach(l => l.classList.remove('active'));
      this.classList.add('active');
      hamburger.classList.remove('open');
      navBar.classList.remove('open');
    });
  });
}

initMenu();
</script>
